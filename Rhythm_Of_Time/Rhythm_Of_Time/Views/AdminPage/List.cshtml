@model IEnumerable<Rhythm_Of_Time.Models.UserDto>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>   

<p>
    <a asp-controller="LinkPage" asp-action="UserTimeLineLink">Link User to Timeline</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserEmail)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserEmail)
                </td>
              
             
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                    <a asp-action="ConfirmDelete" asp-route-id="@item.UserId">Delete</a>   
                </td>
            </tr>
        }
    </tbody>
    </table>
