@model Rhythm_Of_Time.Models.TimelineDto

@{
    ViewData["Title"] = "New Timeline";
}

<h1 class="text-primary mb-4">New Timeline</h1>

<h4 class="text-muted">Timeline</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Add" class="p-4 border rounded shadow-sm" style="background: #f8f9fa;">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="timeline_name" class="form-label fw-bold"></label>
                <input asp-for="timeline_name" class="form-control" />
                <span asp-validation-for="timeline_name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="date" class="form-label fw-bold"></label>
                <input asp-for="date" class="form-control" type="date" />
                <span asp-validation-for="date" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="description" class="form-label fw-bold"></label>
                <textarea asp-for="description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-gradient-primary" />
            </div>
        </form>
    </div>
</div>

@if (User.IsInRole("admin"))
{
    <div class="mt-3">
        <a class="btn btn-outline-secondary" asp-action="List">← Back to Timeline List</a>
    </div>
}

    <style>
        .btn-gradient-primary {
            background: linear-gradient(45deg, #007bff, #00c6ff);
            color: white;
            border: none;
        }

            .btn-gradient-primary:hover {
                opacity: 0.9;
            }

        label.form-label {
            color: #333;
        }
    </style>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
